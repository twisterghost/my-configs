{
	"auto_complete_commit_on_tab": true,
	"bold_folder_labels": true,

	// Sublime for whatever reason by default will copy the blank string if you
	// hit copy with nothing selected. This stops that from happening.
	"copy_with_empty_selection": false,

	// This is currently off but its fun to turn this on sometimes, gives files
	// a new perspective. Draws the text centered as a whole, left justified to
	// the width of the longest line.
	"draw_centered": false,
	"draw_minimap_border": true,
	"draw_white_space": "all",

	// Keeps folders from showing up in the sidebar and in fuzzy search.
	"folder_exclude_patterns":
	[
		".svn",
		".git",
		".hg",
		"CVS",
		"target",
		"build"
	],

	// I don't like to strain my eyes with a tiny font size. I'm fine with
	// scrolling if it means I don't have to squint.
	"font_size": 15.0,
	"ignored_packages":
	[
		"Vintage"
	],
	"index_exclude_patterns":
	[
		"*.log"
	],

	// A tiny bit of buffer room for each line never hurt nobody.
	"line_padding_bottom": 1,
	"line_padding_top": 1,

	// This is useful sometimes, but more often than not I don't want sublime to
	// re-open with a bunch of files. Thats what project workspaces are for.
	"remember_open_files": false,

	// The Google coding guidelines say 80 characters for most languages, and 120
	// for Java.
	"rulers":
	[
		80,
		100,
		120
	],

	"scroll_past_end": true,
	"tab_size": 2,

	// Depends on the project. I prefer 2 spaces, but some people prefer tabs.
	"translate_tabs_to_spaces": true,
	//"translate_tabs_to_spaces": false,

	// ALWAYS.
	"trim_trailing_white_space_on_save": true,

	// NEVER.
	"word_wrap": false
}
